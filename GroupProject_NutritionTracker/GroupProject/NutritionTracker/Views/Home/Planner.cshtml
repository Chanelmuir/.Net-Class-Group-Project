@model List<NutritionTracker.Models.Day>

@{
    ViewData["Title"] = "Planner";
}

<h1 class="mb-4">Daily Planner</h1>

<a class="btn btn-success mb-3" asp-controller="Meals" asp-action="AddMeal">Add Meal</a>

@if (!Model.Any())
{
    <p class="text-muted">No days found in the planner.</p>
}
else
{
    @foreach (var day in Model.OrderBy(d => d.Date))
    {
        <h3 class="mt-4"><strong>@day.Date.ToShortDateString()</strong></h3>

        @if (!day.Meals.Any())
        {
            <p class="text-muted">No meals for this day.</p>
        }
        else
        {
            // Totals for the day using Meal's Total properties
            double dayCalories = day.Meals.Sum(m => m.TotalCalories);
            double dayProtein = day.Meals.Sum(m => m.TotalProtein);
            double dayCarbs = day.Meals.Sum(m => m.TotalCarbs);
            double dayFat = day.Meals.Sum(m => m.TotalFat);

            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Meals</th>
                        <th>Calories</th>
                        <th>Protein</th>
                        <th>Carbs</th>
                        <th>Fat</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var meal in day.Meals)
                    {
                        <tr>
                            <td>@meal.Name</td>
                            <td>@meal.TotalCalories</td>
                            <td>@meal.TotalProtein</td>
                            <td>@meal.TotalCarbs</td>
                            <td>@meal.TotalFat</td>
                            <td>
                                @if (meal.DishId.HasValue)
                                {
                                    <a class="btn btn-sm btn-primary"
                                       asp-controller="Dishes"
                                       asp-action="Details"
                                       asp-route-id="@meal.DishId">View</a>
                                }
                                <a class="btn btn-sm btn-outline-danger"
                                   asp-controller="Meals"
                                   asp-action="Delete"
                                   asp-route-id="@meal.MealId">Delete</a>
                            </td>
                        </tr>
                    }

                    <!-- Totals row -->
                    <tr class="fw-bold table-secondary">
                        <td>Total:</td>
                        <td>@dayCalories</td>
                        <td>@dayProtein</td>
                        <td>@dayCarbs</td>
                        <td>@dayFat</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        }
    }
}
