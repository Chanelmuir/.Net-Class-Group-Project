@model List<NutritionTracker.Models.Favorite>

@{
    ViewData["Title"] = "Favorites";
}

<h1 class="mb-4">Favorites</h1>

@if (!Model.Any())
{
    <p class="text-muted">You haven't added any favorites yet.</p>
}
else
{
    <div class="row">
        @foreach (var fav in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            @fav.Dish.Name

                            <!-- Unfavorite button (filled star) -->
                            <a class="btn btn-sm btn-warning"
                               title="Remove from Favorites"
                               asp-controller="Favorites"
                               asp-action="Toggle"
                               asp-route-id="@fav.Dish.DishId">
                                <i class="bi bi-star-fill"></i>
                            </a>
                        </h5>

                        <p>@fav.Dish.Foods.Sum(f => f.Calories) calories</p>

                        <a class="btn btn-primary btn-sm"
                           asp-controller="Dishes"
                           asp-action="Details"
                           asp-route-id="@fav.Dish.DishId">
                            View
                        </a>

                        <a class="btn btn-outline-success btn-sm"
                           asp-controller="Dishes"
                           asp-action="AddMeal"
                           asp-route-id="@fav.Dish.DishId">
                            Add to Planner
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
}

<hr />

<a class="btn btn-primary" asp-controller="Menu" asp-action="Index">
    Browse More Menu Items
</a>
